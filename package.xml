<package format="2">
  <name>ImmersionBot</name>
  <version>0.0.1</version>
  <description>Displays a trajectory in an AR headset</description>

  <!-- One (or more) maintainers -->
  <maintainer email="ezj2hu@virginia.edu">Zachariah K. Risheq</maintainer>

